.course-detail-container {
  height: 93vh;
  overflow: auto;
}
.course-detail-container .course-container {
  overflow: auto;
}
.course-detail-container .course-container .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.course-detail-container .course-container .content .top .item-box {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.course-detail-container .course-container .content .top .item-box .iconfont {
  font-size: 36rpx;
  padding-right: 10rpx;
}
.course-detail-container .course-container .content .top .item-box .text {
  color: #808080;
  margin-right: 40rpx;
}
.course-detail-container .course-container .content .top .courseType {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.course-detail-container .course-container .content .top .courseType .hint {
  display: flex;
  align-items: center;
}
.course-detail-container .course-container .content .top .left {
  display: flex;
}
.course-detail-container .course-container .content .top .right {
  margin-left: 90rpx;
  color: #0081ff;
}
.course-detail-container .course-container .content .top .add {
  display: flex;
  padding: 20rpx;
  line-height: 40rpx;
}
.course-detail-container .course-container .content .top .add .add-class {
  font-size: 40rpx;
  color: #0081ff;
  margin-right: 20rpx;
}
.course-detail-container .course-vid-container {
  overflow: auto;
}
.course-detail-container .course-vid-container .content .item-box {
  margin-top: 20rpx;
  padding: 20rpx;
  padding-bottom: 82rpx;
  background-color: #fff;
}
.course-detail-container .course-vid-container .content .item-box .course-title {
  display: flex;
  align-items: center;
}
.course-detail-container .course-vid-container .content .item-box .course-title .right {
  margin: 0px 13px;
  text-align: center;
  color: #0081ff;
}
.course-detail-container .course-vid-container .content .item-box .course-content {
  position: relative;
}
.course-detail-container .course-vid-container .content .item-box .course-content .upload-button {
  position: absolute;
  right: 0;
  bottom: -70rpx;
  width: 110rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-color: #0081ff;
}
.course-detail-container .course-vid-container .content .item-box .course-content .select-button {
  position: absolute;
  left: 0;
  bottom: -70rpx;
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.course-detail-container .course-vid-container .content .add {
  display: flex;
  padding: 20rpx;
  line-height: 40rpx;
}
.course-detail-container .course-vid-container .content .add .add-class {
  font-size: 40rpx;
  color: #0081ff;
  margin-right: 20rpx;
}
.course-detail-container .bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.course-detail-container .bottom .u-button {
  width: 30%;
}

